CompileFlags:
  Add: [-Wall, -Wextra, -std=c++23]
  Remove: [-W*deprecated-declarations, -mno-direct-extern-access]

Diagnostics:
  ClangTidy:
    Add: [performance-*, modernize-*, readability-*]
    Remove: [modernize-use-trailing-return-type, readability-magic-numbers, readability-redundant-access-specifiers]

Index:
  Background: Build
  StandardLibrary: true

InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true